<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, inital-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/bb6cd5aa95.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><%= image_tag "logo.jpg" %></a>
          <!--ハンバーガーメニュー-->
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item"><%= link_to posts_path(category: 1), class: 'nav-link text-dark' do %><i class="fas fa-paw">捜索一覧</i><% end %></li>
              <li class="nav-item"><i class="fas fa-hand-holding-medical">保護一覧</i></li>
              <li class="nav-item"><%= link_to user_path(current_user.id), class: 'nav-link text-dark' do %><i class="fas fa-home">'マイページ</i><% end %></li>
              <li class="nav-item"><%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark' do %><i class="fas fa-sign-out-alt">ログアウト</i><% end %></li>
              <% else %>
              <li class="nav-item"><%= link_to posts_path, class: 'nav-link text-dark' do %><i class="fas fa-paw">捜索一覧</i><% end %></li>
              <li class="nav-item"><%= link_to posts_path, class: 'nav-link text-dark' do %><i class="fas fa-hand-holding-medical">保護一覧</i><% end %></li>
              <li class="nav-item"><%= link_to new_user_registration_path do %><i class="fas fa-user-plus">新規登録</i><% end %></li>
              <li class="nav-item"><%= link_to new_user_session_path, class: 'nav-link text-dark' do %><i class="fas fa-sign-in-alt">ログイン</i><% end %></li>
              <% end %>
            </ul>
          </div>S
        </div>
      </nav>


    </header>

    <main>
      <%= yield %>
    </main>
    <footer>
      <div class="footer_main">
        <p>© 2021 yama</p>
      </div>
    </footer>
  </body>
</html>
