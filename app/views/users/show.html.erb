<div class="container">
  <h1>ユーザページ</h1>
  <div class="row">
    <div class="col-4">
      <%= render 'users/info' %>
    </div>

    <div class="col-8">
      <%= link_to '投稿する', new_post_path %>
      <h4>投稿一覧</h4>
      <% @posts.each do |post| %>
      <div class="post-item">
        <%= post.post_image_id %>
        <%= post.plase %>
        <%= post.pet_name %>
        <%= post.pet_sex %>
        <%= post.text %>
        <%= post.user_id %>
      </div>
      <% end %>
    </div>
  </div>
</div>