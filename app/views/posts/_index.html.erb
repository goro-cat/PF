  
<div class="col-9">
  <% @posts.each do |post| %>
  <div class="post-item">
    <%= link_to post_path(post.id) do %>
      <%= attachment_image_tag post, :post_image, :fill, 200, 120, format: "jpg" %>
      <h4>場所</h4>
      <%= post.plase %>
      <h4>名前</h4>
      <%= post.pet_name %>
      <h4>性別</h4>
      <%= post.pet_sex %>
      <h4>特徴・性格など</h4>
      <%= post.text %><br/>
    <% end %>
    <%= post.user.account_name %>
  </div>

  <!--いいね-->
  <% if post.favorited_by?(current_user) %>
  <p>
    <%= link_to post_favorites_path(post.id), method: :delete do %>
      ♥<%= post.favorites.count %>
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to post_favorites_path(post.id), method: :post do %>
      ♡<%= post.favorites.count %>
    <% end %>
  </p>
  <% end %>
<% end %>

<%= paginate @posts %>
</div>
 