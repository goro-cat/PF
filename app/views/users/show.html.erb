<div class="container">
  <h3><%= @user.account_name %>さん　のページです</h3>
  <div class="row">
    <div class="col-4">
      <%= render 'users/info', user: @user %>
    </div>

    <div class="col-8">
      <%= link_to new_post_path do %><i class="fas fa-plus-circle">投稿する</i><% end %>
      <h4>投稿一覧</h4>
      <%= render 'posts/list', posts: @posts %>


    </div>
  </div>
</div>