<!--ユーザ情報-->
<%= attachment_image_tag @user, :account_image, :fill, 60, 60, format: 'jpeg', fallback: "icon.jpeg" %>
<%= @user.account_name %><br />
<%= @user.introduction %>
<h4></h4>
<% if @user.id == current_user.id%>
  <%= link_to '編集する', edit_user_path(@user.id) %>
<% end %>
<div>
  <% if current_user.following?(@user) %>
    <%= link_to "フォローを解除する", unfollow_path(@user.id), method: :delete %>
  <% elsif current_user.id == @user.id %>
    <%= link_to "フォロー一覧", follows_path %>
  <% else %>
    <%= link_to "フォローする", follow_path(@user.id), method: :post %>
  <% end %>
</div>