<div class="container">
  <h1>ユーザページ</h1>
  <div class="row">
    <div class="col-4">
      <%= render 'users/info' %>
    </div>

    <div class="col-8">
      <%= link_to new_post_path do %><i class="fas fa-plus-circle">投稿する</i><% end %>
      <h4>投稿一覧</h4>
      <% @posts.each do |post| %>
      <div class="post-item">
        <%#= attachment_image_tag post, :post_image, :fill, 200, 120, format: "jpg" %>
        <%= post.plase %>
        <%= post.pet_name %>
        <%= post.pet_sex %>
        <%= post.text %>
        <%= post.user_id %>
      </div>
      <% end %>
    </div>
  </div>
</div>