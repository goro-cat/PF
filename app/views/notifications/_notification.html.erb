<% visiter = notification.visiter %>
<% visited = notification.visited %>

<div class='m-2'>
  <%= link_to user_path(visiter) do %>
    <span class="visiter_user_image_box"><%= attachment_image_tag visiter, :account_image, class:"visiter_user_image rounded-circle", size: "70x70", fallback: "icon.jpeg" %></span>
    <%= visiter.account_name %>
  <% end %>

  <span>さんが</span>

  <% case notification.action %>
    <% when 'follow' then %>
      <%= "あなたをフォローしました" %>
    <% when 'chat' then %>
      <%= link_to 'あなたにメッセージ', chat_path(notification.visiter), style:"font-weight: bold;", class: "border-bottm" %>
      <%= "を送りました" %>
    <% when 'comment' then %>
      <%= link_to 'あなたの投稿にコメント', post_path(notification.post_id), style:"font-weight: bold;", class: "border-bottom" %>
      <%= "をしました" %>
  <% end %>
  <span><%= "(#{time_ago_in_words(notification.created_at)}前)" %></span><br />
</div>
