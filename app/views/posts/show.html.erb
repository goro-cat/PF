<h3 class="font p-3">投稿の詳細</h3>

<div class="container mb-5">
  
    <div class="row">
      <div class="col-2">
        <%= render 'users/info', user: @post.user %>
      </div>
      <div class="col-10">
        <% if @post.post_images.present? %>
          <% @post.post_images.each do |image| %>
            <%= attachment_image_tag image, :image, class: 'rounded', size: "200x200" %>
          <% end %>
        <% else %>
          <%= image_tag "logo.jpg" %>
        <% end %>
        
        
      <div class="mt-3 bg-white border rounded">
        <div class="top-content p-2">
          <% if @post.user == current_user %>
            <%= link_to '編集', edit_post_path(@post), class: 'btn btn-secondary' %>
            <%= link_to '削除', post_path(@post), class: 'btn btn-danger', method: :delete %>
          <% end %>
        </div>
        <table class="table">
          <tr>
            <th>投稿日</th>
            <td><%= @post.created_at.strftime('%Y年%m月%d日') %></td>
            <td id="favorites_buttons_<%= @post.id %>">
              <%= render 'favorites/favorite', post: @post %>
            </td>
          </tr>
          <tr>
            <th>場所</th>
            <td colspan="2"><%= @post.plase %></td>
          </tr>
          <tr>
            <th><%= @post.category %></th>
            <td colspan="2"><%= @post.animal %></td>
          </tr>
          <tr>
            <th>性別 </th>
            <td colspan="2"><%= @post.pet_sex %></td>
          </tr>
          <% if @post.pet_name.present? %>
            <tr>
              <th>名前 </th>
              <td colspan="2"><%= @post.pet_name %></td>
            </tr>
          <% end %>
          <tr>
            <th>特徴・説明</th>
            <td colspan="2"><%= @post.text %></td>
          </tr>
        </table>
      </div>
        
      <div class="mt-3 bg-white border rounded">
        <div id="comment_area">
          <%= render 'comments/comment', post: @post, comment: @comment %>
      </div>
    </div>
  </div>