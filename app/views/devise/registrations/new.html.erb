<div class="container font">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :"名前" %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      <%= f.text_field :first_name, autocomplete: "first_name" %>
    </div>

    <div class="field">
      <%= f.label :"名前（カタカナ）" %><br />
      <%= f.text_field :kana_last_name, autocomplete: "kana_last_name" %>
      <%= f.text_field :kana_first_name, autocomplete: "kana_first_name" %>
    </div>

    <div class="field">
      <%= f.label :"住所" %><br />
      <%= f.text_field :address, autocomplete: "address" %>
    </div>

    <div class="field">
      <%= f.label :"連絡先" %><br />
      <%= f.text_field :phone_number, autocomplete: "phone_number" %>
    </div>

    <div class="field">
      <%= f.label :"メールアドレス" %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :"アカウント名" %><br />
      <%= f.text_field :account_name, autocomplete: "account_name" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード・再確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "登録する", class: 'btn-sm btn-primary border rounded' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
